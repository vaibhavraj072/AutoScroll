{
  "manifest_version": 3,
  "name": "YouTube Shorts Auto-Scroll",
  "version": "1.0",
  "description": "Automatically scrolls up to the next video while watching YouTube Shorts.",
  "permissions": [
	"scripting",
	"tabs"
  ],
  "background": {
	"service_worker": "background.js"
  },
  "content_scripts": [
	{
	  "matches": ["https://www.youtube.com/shorts/*"],
	  "js": ["content.js"]
	}
  ],
  "icons": {
	"16": "icons/icon16.png",
	"48": "icons/icon48.png",
	"128": "icons/icon128.png"
  }
}