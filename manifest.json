{
  "name": "Smart Auto-Scroll",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A Chrome extension that auto-scrolls to the next reel or short",
  "permissions": ["<all_urls>", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*", "*://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["backgroundScript.js"],
    "persistent": false
  }
}