{
  "manifest_version": 3,
  "name": "YouTube Shorts Auto-Scroll",
  "version": "1.0",
  "description": "Automatically scrolls up while watching YouTube Shorts.",
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/shorts/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}